package com.rubypaper.controller;

import com.rubypaper.domain;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;


@RestController
public class BoardController {

    private final Chapter01Application chapter01Application;
	
	public BoardController(Chapter01Application chapter01Application) {
		System.out.println("===> BVoardController 생성");
		this.chapter01Application = chapter01Application;
	}
	
	@GetMapping("/hello")
	public String hello(String name) {
		return "Hello" + name;
	}
	
	@GetMapping("/getBoard")
	public chapter01Application getBoard() {
		BoardVO board = new BoardVO();
	}
}


